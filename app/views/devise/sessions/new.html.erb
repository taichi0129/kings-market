<div class="wrapper">
  <div class="devise">
    <div class="devise-title">ログイン</div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "テストユーザー：admin@admin", class: "text-field" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "テストユーザー：111111（1が6つ）", class: "text-field"  %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "パスワードを記憶させる" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "devise-btn" %>
      </div>
    <% end %>

      <%= render "devise/shared/links" %>
  </div>
</div>
